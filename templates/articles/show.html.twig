{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ article.category.titre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_list') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>

    <form method="post" action="{{ path('delete_article', {'id': article.id}) }}" style="display: inline-block">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endblock %}